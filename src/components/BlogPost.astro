---
import FormattedDate from "./FormattedDate.astro";
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<article class="mx-auto max-w-[65ch] px-2">
  <div class="-mx-2">
    {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
    <!-- hero -->
  </div>
  <div
    class="mt-2 mb-4 flex flex-col items-baseline justify-between md:flex-row"
  >
    <h1 class="text-title text-3xl font-bold text-balance">{title}</h1>
    {
      updatedDate && (
        <span class="text-span flex flex-none items-end gap-2">
          Last updated on <FormattedDate date={updatedDate} />
        </span>
      )
    }
  </div>

  <slot />
</article>
